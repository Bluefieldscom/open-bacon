<script>
var page = 'Forgot Password Page';analytics.track('Viewed ' + page, {});
</script>

<div class="row password-forgot" style="margin-top:40px">
	<div class="four columns centered" >
		<h2>Forgot your password?</h2>
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :id => "new_password" }) do |f| %>
			<%= devise_error_messages! %>
			<%= f.email_field :email, :placeholder => "Enter your email" %>
			<%= f.submit "Reset password", :class => "button radius" %><br><br>
			<a href="/login" >Back to login</a>
		<% end %>
	</div>
</div>

<script>
$(function(){

	$("#new_password").submit(function(){

		return BFApp.validation.isEmail({
			htmlObject: $("#user_email")
		});

	});

});
</script>
