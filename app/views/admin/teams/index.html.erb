<div class="row">
	<div class="columns twelve">
		<h1>Teams (<%=@teams.size%>)</h1>
		<br />
	</div>
</div>
<div class="row">
	<div class="columns eight dashboard">
		<table>
			<thead>
				<tr>
					<td>Name</td>
					<td>Sport</td>
					<td>Events</td>
					<td>Players</td>
					<td>Created</td>
					<td>By</td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
			</thead>
			<% @teams.each do |team| %>
			<tr>
				<td><%=link_to team.name, team_path(team) %></td>
				<td><%=team.sport %></td>
				<td><%=team.events.size %></td>
				<td><%=team.players.size %></td>
				<td><%=l(team.created_at) if(!team.created_at.nil?) %></td>
				<% if team.created_by_type == User.name %>
				<td><% if(!team.created_by.nil?) then %> <%=link_to "#{team.created_by.email}", admin_users_path(team.created_by)%><% end %></td>
				<% else %>
				<td></td>
				<% end %>
				<td><%=link_to "Administer", admin_team_path(team) %></td>
				<td><%=link_to "Edit", edit_admin_team_path(team) %></td>
				<td><%=link_to "Delete", admin_team_path(team), :confirm => "Sure?", :method => :delete %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>