<div class="card user-card popover">
	<div class="card-header">
		<%= htmlPic %>
		<div class="user-info">
			<h1><%= name %></h1>
		</div>
	</div>
	<div class="card-meta">
		<ul class="user-meta">
			<li>
				<span class="title"><%= events %></span>
				<span class="description">Event<% if(events > 1){ %>s<% } %> played</span>
			</li>
			<li>
				<span class="title"><%= teams %></span>
				<span class="description">Team<% if(teams > 1){ %>s<% } %></span>
			</li>
			<li>
				<span class="title"><%= friends %></span>
				<span class="description">Friend<% if(friends > 1){ %>s<% } %></span>
			</li>
		</ul>
</div>
</div>